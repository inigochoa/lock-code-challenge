---
import FooterButton from '@/components/FooterButton.astro'
import { t } from '@/i18n/utils'
---

<footer class="flex gap-8 justify-center mt-4">
  <FooterButton
    color="bg-amber-500"
    hoverColor="hover:bg-amber-600"
    icon="restart"
    id="btn-restart"
    title={t('button.restart')}
  />

  <FooterButton
    color="bg-red-400"
    hoverColor="hover:bg-red-500"
    icon="help"
    id="btn-help"
    title={t('button.help')}
  />
</footer>
