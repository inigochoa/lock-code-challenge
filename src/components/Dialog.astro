---
export interface Props {
  id: string
}

const { id } = Astro.props;
---

<dialog
  class="animate-dialog backdrop:backdrop-blur-sm border-none m-auto p-6 rounded-md w-md"
  id={id}
  onclick="this.close()"
>
  <slot />

  <button
    class="bg-gray-200 border-none cursor-pointer float-right mt-6 px-4 py-2 rounded-lg hover:bg-gray-400"
  >Close</button>
</dialog>
